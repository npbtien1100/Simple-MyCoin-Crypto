<div class="row justify-content-center">
    <div class="col-lg-5">
        <div class="card shadow-lg border-0 rounded-lg mt-5">
            <div class="card-header">
                <h3 class="text-center font-weight-light my-4">Wallet Info</h3>
            </div>
            <div class="card-body">
                <div id="result"></div>
                <form id="login-form">
                    <div class="form-floating mb-3">
                        <input class="form-control" id="publicKey" type="text" name="publicKey" placeholder="Public Key"
                            value="{{myWallet.publicKey}}" readonly />
                        <label for="publicKey">Public Key/Wallet Address</label>
                    </div>
                    <div class="form-floating mb-3">
                        <input class="form-control" id="privateKey" type="password" placeholder="Private Key"
                            name="privateKey" value="{{myWallet.privateKey}}" readonly />
                        <label for="privateKey">Private Key</label>
                    </div>
                    <div class="mb-3">
                        <span onclick="password_show_hide();">
                            <i class="fas fa-eye" id="show_eye"></i>
                            <i class="fas fa-eye-slash d-none" id="hide_eye"></i>
                        </span>
                        <label class="form-check-label mx-1" for="inputRememberPassword" id="show-hide-label">Show
                            private key</label>
                    </div>
                </form>
            </div>
            <div class="card-footer text-center py-3">
                <h3 class="font-weight-light">Wallet Balance: {{myWallet.balance}}</h3>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    function password_show_hide() {
        var x = document.getElementById("privateKey");
        var show_eye = document.getElementById("show_eye");
        var hide_eye = document.getElementById("hide_eye");
        var label = document.getElementById("show-hide-label");
        hide_eye.classList.remove("d-none");
        if (x.type === "password") {
            x.type = "text";
            show_eye.style.display = "none";
            hide_eye.style.display = "inline-block";
            label.innerText = "Show private key";
        } else {
            x.type = "password";
            show_eye.style.display = "inline-block";
            hide_eye.style.display = "none";
            label.innerText = "Hide private key";
        }
    }
</script>